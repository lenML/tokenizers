{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2020",
    "declaration": false,
    "declarationDir": null,
    "moduleResolution": "nodenext",
    "lib": ["DOM", "DOM.Iterable", "esnext", "ESNext.Array"],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true
  },
  "include": ["src"],
  "ts-node": {
    "transpileOnly": true
  }
}
